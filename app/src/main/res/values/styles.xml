<resources>
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
        <item name="android:theme">@style/Theme.AppCompat.Light.NoActionBar</item>
        <item name="colorPrimary">@color/settings_primary</item>
        <item name="colorPrimaryDark">@color/settings_primary_dark</item>
        <item name="colorAccent">@color/settings_accent</item>
    </style>

    <style name="AppPreferenceFragmentCompatStyle">
        <item name="android:layout">@layout/settings_screen</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">@drawable/selector_default</item>
        <item name="android:textColor">@color/default_button_text</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:paddingLeft">@dimen/screen_margin</item>
        <item name="android:paddingRight">@dimen/screen_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DefaultIntroTextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big_size_20</item>
        <item name="android:lines">4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/screen_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/screen_margin</item>
    </style>

    <style name="EventDetailsScreenMainUpRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big_size_20</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EventDetailsScreenMainDownRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big_size</item>
    </style>

    <style name="EventDetailsScreenItemUpRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_big_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EventDetailsScreenItemDownRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:layout_marginBottom">@dimen/screen_margin_small</item>
    </style>

</resources>
