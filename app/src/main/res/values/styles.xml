<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.LoginScreen" parent="AppTheme.Base">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:layout_width">@dimen/default_button_width</item>
        <item name="android:paddingLeft">@dimen/screen_margin</item>
        <item name="android:paddingRight">@dimen/screen_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DefaultButton.Positive" parent="DefaultButton">
        <item name="android:background">@drawable/selector_default_positive</item>
        <item name="android:textColor">@color/default_button_text</item>
    </style>

    <style name="DefaultButton.Negative" parent="DefaultButton">
        <item name="android:background">@drawable/selector_default_negative</item>
        <item name="android:textColor">@color/default_button_text</item>
    </style>

    <style name="DefaultIntroTextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big_size_20</item>
        <item name="android:lines">4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/screen_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/screen_margin</item>
    </style>

    <style name="EventDetailsScreenMainUpRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big_size_20</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EventDetailsScreenMainDownRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big_size</item>
    </style>

    <style name="EventDetailsScreenItemUpRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_big_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EventDetailsScreenItemDownRow">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:layout_marginBottom">@dimen/screen_margin_small</item>
    </style>

    <style name="DefaultFloatingHint">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textSize">@dimen/text_smaller_size</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="DefaultEditText" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
