<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.activity_sync.custom.MoveUpwardAwareLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/event_details_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <include layout="@layout/toolbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/event_details_base_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimaryLight">

                        <LinearLayout
                            android:id="@+id/you_organizer_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_organizer"
                                android:layout_marginRight="@dimen/screen_margin_half"/>

                            <TextView
                                style="@style/EventDetailsScreenMainDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/txt_event_det_organizer" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/you_participant_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check"
                                android:layout_marginRight="@dimen/screen_margin_half"/>

                            <TextView
                                style="@style/EventDetailsScreenMainDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/txt_participant" />

                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        tools:context=".MapActivity" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/colorPrimary"
                            android:padding="@dimen/screen_margin_half">

                            <TextView
                                android:id="@+id/event_det_discipline"
                                style="@style/EventDetailsScreenMainUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="basketball"/>

                            <TextView
                                android:id="@+id/event_det_location"
                                style="@style/EventDetailsScreenMainDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/screen_margin_small"
                                tools:text="Jordan"/>

                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/organizer_layout"
                                        android:background="@drawable/selector_event_details_item"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:padding="@dimen/screen_margin_half">

                                        <TextView
                                            style="@style/EventDetailsScreenItemUpRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_event_det_organizer" />

                                        <TextView
                                            android:id="@+id/event_det_organizer"
                                            style="@style/EventDetailsScreenItemDownRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="Marcin Zielinski" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/participants_layout"
                                        android:background="@drawable/selector_event_details_item"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:orientation="vertical"
                                        android:padding="@dimen/screen_margin_half">

                                        <TextView
                                            style="@style/EventDetailsScreenItemUpRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_event_det_participants" />

                                        <TextView
                                            android:id="@+id/event_det_participants"
                                            style="@style/EventDetailsScreenItemDownRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="6/12" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:padding="@dimen/screen_margin_half">

                                        <TextView
                                            style="@style/EventDetailsScreenItemUpRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_event_det_date" />

                                        <TextView
                                            android:id="@+id/event_det_date"
                                            style="@style/EventDetailsScreenItemDownRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="12/12/2016 18:00" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:orientation="vertical"
                                        android:padding="@dimen/screen_margin_half">

                                        <TextView
                                            style="@style/EventDetailsScreenItemUpRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_event_det_level" />

                                        <TextView
                                            android:id="@+id/event_det_level"
                                            style="@style/EventDetailsScreenItemDownRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="medium" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:orientation="vertical"
                                        android:padding="@dimen/screen_margin_half">

                                        <TextView
                                            style="@style/EventDetailsScreenItemUpRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_event_det_description" />

                                        <TextView
                                            android:id="@+id/event_det_description"
                                            style="@style/EventDetailsScreenItemDownRow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="Very long text written in order to check if two lines of text here are displaying correctly" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_details_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/screen_margin_half"
                android:layout_marginBottom="@dimen/screen_margin_half">

                <Button
                    android:id="@+id/join_leave_event_btn"
                    style="@style/DefaultButton.Positive"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:text="@string/btn_join_event"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half" />

                <Button
                    android:id="@+id/cancel_event_btn"
                    style="@style/DefaultButton.Negative"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:text="@string/btn_cancel_event"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:visibility="gone"/>

            </LinearLayout>
        </com.activity_sync.custom.MoveUpwardAwareLinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>