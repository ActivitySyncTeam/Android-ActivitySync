<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/event_creator_bg"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/event_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"
                    android:background="@drawable/selector_event_creator_item"
                    android:minHeight="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/screen_margin"
                            android:src="@drawable/ic_calendar"
                            android:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventCreatorUpperRow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Choose date" />

                            <TextView
                                android:id="@+id/event_date"
                                style="@style/EventCreatorLowerRow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Not selected" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/event_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"
                    android:background="@drawable/selector_event_creator_item"
                    android:minHeight="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/screen_margin"
                            android:src="@drawable/ic_gps"
                            android:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventCreatorUpperRow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Choose location" />

                            <TextView
                                android:id="@+id/event_location"
                                style="@style/EventCreatorLowerRow"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Not selected" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"
                    android:background="@drawable/selector_event_creator_item">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/EventCreatorUpperRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Discipline" />

                            <Spinner
                                android:id="@+id/spinner_discipline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"
                    android:background="@drawable/selector_event_creator_item">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/EventCreatorUpperRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Level" />

                            <Spinner
                                android:id="@+id/spinner_level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:backgroundTint="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"
                    android:background="@drawable/selector_event_creator_item">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/EventCreatorUpperRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Players number" />

                            <Spinner
                                android:id="@+id/spinner_players"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:backgroundTint="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"
                    android:layout_weight="1"
                    android:background="@drawable/selector_event_creator_item">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="vertical">

                        <TextView
                            style="@style/EventCreatorUpperRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description" />

                        <EditText
                            android:id="@+id/event_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/text_default_size" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <CheckBox
                    android:id="@+id/event_checkbox"
                    style="@style/EventCreatorUpperRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enroll as a participant"
                    android:layout_marginLeft="@dimen/screen_margin_quarter"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:layout_marginTop="@dimen/screen_margin_half"/>

                <Button
                    android:id="@+id/btn_create_event"
                    style="@style/DefaultButton.Positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/screen_margin_half"
                    android:text="Create event" />

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/navigation_view" />

</android.support.v4.widget.DrawerLayout>