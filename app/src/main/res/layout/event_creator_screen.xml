<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.activity_sync.custom.MoveUpwardAwareLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/event_creator_bg"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <include layout="@layout/toolbar" />

                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/comments_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            style="@style/CardViewDefault"
                            android:id="@+id/event_date_layout"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/screen_margin_half"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/screen_margin"
                                    android:src="@drawable/ic_calendar"
                                    android:tint="@color/black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/EventCreatorUpperRow"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingTop="@dimen/screen_margin_quarter"
                                        android:paddingBottom="@dimen/screen_margin_quarter"
                                        android:text="@string/txt_choose_date" />

                                    <TextView
                                        android:id="@+id/event_date"
                                        style="@style/EventCreatorLowerRow"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:paddingTop="@dimen/screen_margin_quarter"
                                        android:paddingBottom="@dimen/screen_margin_quarter"
                                        android:text="@string/txt_not_selected" />
                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            style="@style/CardViewDefault"
                            android:id="@+id/event_location_layout"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/screen_margin_half"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/screen_margin"
                                    android:src="@drawable/ic_gps"
                                    android:tint="@color/black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/EventCreatorUpperRow"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingTop="@dimen/screen_margin_quarter"
                                        android:paddingBottom="@dimen/screen_margin_quarter"
                                        android:text="@string/txt_choose_date" />

                                    <TextView
                                        android:id="@+id/event_location"
                                        style="@style/EventCreatorLowerRow"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:paddingTop="@dimen/screen_margin_quarter"
                                        android:paddingBottom="@dimen/screen_margin_quarter"
                                        android:text="@string/txt_not_selected" />
                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half"
                            android:background="@drawable/selector_event_creator_item">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/screen_margin_half"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/EventCreatorUpperRow"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/txt_discipline"
                                        android:paddingLeft="@dimen/screen_margin_half"/>

                                    <Spinner
                                        android:id="@+id/spinner_discipline"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/black"/>

                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            style="@style/CardViewDefault.NotClickable"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/screen_margin_half"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/EventCreatorUpperRow"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/txt_level"
                                        android:paddingLeft="@dimen/screen_margin_half"/>

                                    <Spinner
                                        android:id="@+id/spinner_level"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:backgroundTint="@color/black"/>

                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            style="@style/CardViewDefault.NotClickable"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/screen_margin_half"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/EventCreatorUpperRow"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/txt_number_of_players"
                                        android:paddingLeft="@dimen/screen_margin_half"/>

                                    <Spinner
                                        android:id="@+id/spinner_players"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:backgroundTint="@color/black"/>

                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            style="@style/CardViewDefault.NotClickable"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/screen_margin_half"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventCreatorUpperRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_description"
                                    android:paddingLeft="@dimen/screen_margin_half"/>

                                <EditText
                                    style="@style/EventCreatorEditText"
                                    android:id="@+id/event_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_default_size"
                                    android:inputType="textMultiLine"
                                    android:minLines="2"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <CheckBox
                            android:theme="@style/DefaultCheckbox"
                            style="@style/EventCreatorUpperRow"
                            android:id="@+id/event_checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_enroll_as_a_participant"
                            android:layout_marginLeft="@dimen/screen_margin_quarter"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_marginTop="@dimen/screen_margin_half"/>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>


            <Button
                android:id="@+id/btn_create_event"
                style="@style/DefaultButton.Positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/screen_margin_half"
                android:text="@string/txt_create_event" />

        </com.activity_sync.custom.MoveUpwardAwareLinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>