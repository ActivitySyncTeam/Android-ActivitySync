<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="horizontal"
    android:background="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="@dimen/screen_margin_half"
        android:layout_marginRight="@dimen/screen_margin_half"
        android:layout_marginLeft="@dimen/screen_margin_half">

        <LinearLayout
            android:layout_margin="@dimen/screen_margin_half"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account"
                    android:tint="@color/black"
                    android:layout_margin="@dimen/screen_margin_half"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/participant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_size_20"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="Marcin Zielinski"
                    android:layout_marginLeft="@dimen/screen_margin_half"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/participant_credibility_image"
                    android:layout_width="@dimen/text_drawable_default_width"
                    android:layout_height="@dimen/text_drawable_default_height" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>