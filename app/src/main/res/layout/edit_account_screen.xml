<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <include layout="@layout/toolbar"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/screen_margin"
                    android:layout_marginTop="@dimen/screen_margin"
                    android:src="@drawable/ic_avatar"
                    android:tint="@color/settings_primary_dark"/>

                <TextView
                    android:id="@+id/ea_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/screen_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ea_first_name_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/screen_margin_half"
                            android:layout_marginRight="@dimen/screen_margin_half"
                            android:layout_weight="1"
                            android:theme="@style/SettingsFloatingHint">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/ea_first_name"
                                style="@style/SettingsEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/ea_hint_first_name"
                                android:imeOptions="actionNext"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ea_last_name_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/screen_margin_half"
                            android:layout_marginStart="@dimen/screen_margin_half"
                            android:layout_weight="1"
                            android:theme="@style/SettingsFloatingHint">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/ea_last_name"
                                style="@style/SettingsEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/ea_hint_last_name"
                                android:imeOptions="actionNext"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ea_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/SettingsFloatingHint">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/ea_email"
                            style="@style/SettingsEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/ea_hint_email"
                            android:imeOptions="actionNext"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/SettingsFloatingHint">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/ea_signature"
                            style="@style/SettingsEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/ea_hint_signature"
                            android:imeOptions="actionNext"
                            android:singleLine="false"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ea_password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/SettingsFloatingHint">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/ea_password"
                            style="@style/SettingsEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/ea_hint_password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:singleLine="false"/>

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/ea_save"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/ea_save_btn"
                        android:textColor="@color/settings_accent"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>