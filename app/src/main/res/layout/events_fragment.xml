<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/filter_events_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryLight">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_start"
                android:tint="@color/white"
                android:layout_marginRight="@dimen/screen_margin_half"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_whistle"
                android:tint="@color/white"
                android:layout_marginRight="@dimen/screen_margin_half"/>

            <Spinner
                android:id="@+id/disciplines_toolbar"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From today"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_refresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="Refresh"
            android:layout_margin="@dimen/screen_margin_half" />

    </LinearLayout>


<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/events_refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/events_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/screen_margin_half"
            android:clipToPadding="false" />

        <LinearLayout
            android:id="@+id/no_permission_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_pls_enable_locations"
                android:gravity="center"
                android:padding="@dimen/screen_margin_twice" />

            <Button
                android:id="@+id/events_enable_btn"
                style="@style/DefaultButton.EventsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_enable_now" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/looking_for_cords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_wait_for_location"
                android:gravity="center"
                android:paddingLeft="@dimen/screen_margin_biggest"
                android:paddingRight="@dimen/screen_margin_biggest"/>

            <ProgressBar
                android:layout_width="@dimen/default_progressbar_width"
                android:layout_height="@dimen/default_progressbar_height"
                android:layout_margin="@dimen/screen_margin"/>

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>