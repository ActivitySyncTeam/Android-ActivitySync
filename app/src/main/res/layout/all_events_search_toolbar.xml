<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_events_search_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/screen_margin_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="0"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/btn_search_toolbar_search"
            android:src="@drawable/ic_calendar_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/screen_margin_half"
            android:layout_marginLeft="@dimen/screen_margin_half"
            android:text="11/09 17:50\n25/09 17:50"
            android:textColor="@color/colorPrimary"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/discipline_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:hint="@string/search_toolbar_discipline_hint"
            android:textColorHint="@color/gray"/>

    </LinearLayout>


</LinearLayout>