<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:clickable="false"
    android:orientation="horizontal"
    android:background="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="@dimen/screen_margin_half"
        android:layout_marginRight="@dimen/screen_margin_half"
        android:layout_marginLeft="@dimen/screen_margin_half">

        <LinearLayout
            android:layout_margin="@dimen/screen_margin_half"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="Marcin Zielinski napisaÅ‚:" />

                <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_size_20"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="Event zapowiada sie genialnie"
                    android:layout_marginTop="@dimen/screen_margin_half"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>