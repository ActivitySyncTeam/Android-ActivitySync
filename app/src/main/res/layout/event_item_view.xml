<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:clickable="false"
    android:orientation="horizontal"
    android:background="@color/transparent">

    <android.support.v7.widget.CardView
        style="@style/CardViewDefault.RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="@dimen/screen_margin_half"
        android:layout_marginRight="@dimen/screen_margin_half"
        android:layout_marginLeft="@dimen/screen_margin_half">

        <LinearLayout
            android:layout_margin="@dimen/screen_margin_half"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/EventItemImageView"
                    android:src="@drawable/ic_organizer" />

                <TextView
                    android:id="@+id/event_organizer"
                    style="@style/EventItemTextView"
                    tools:text="Marcin Zielinski" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/EventItemImageView"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/event_date"
                    style="@style/EventItemTextView"
                    tools:text="08.06.2016 18:00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/EventItemImageView"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/event_location"
                    style="@style/EventItemTextView"
                    tools:text="Only pro players, not amateurs" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/EventItemImageView"
                    android:src="@drawable/ic_people" />

                <TextView
                    android:id="@+id/event_places"
                    style="@style/EventItemTextView"
                    tools:text="7/12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_discipline"
                    android:layout_width="match_parent"
                    style="@style/EventItemTextView"
                    tools:text="BASKETBALL"
                    android:gravity="right"
                    android:layout_margin="@dimen/screen_margin_small"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>