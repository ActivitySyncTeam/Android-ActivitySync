<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/user_details_bg"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <include layout="@layout/toolbar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_thumb_up"
                                android:tint="@color/user_details_thumb_default" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/screen_margin"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:src="@drawable/ic_avatar"
                            android:tint="@color/user_details_avatar" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_thumb_down"
                                android:tint="@color/user_details_thumb_default" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/screen_margin"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_username" />

                            <TextView
                                android:id="@+id/tv_username"
                                style="@style/EventDetailsScreenItemDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="mzielu" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_name" />

                            <TextView
                                android:id="@+id/tv_name"
                                style="@style/EventDetailsScreenItemDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Marcin" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_last_name" />

                            <TextView
                                android:id="@+id/tv_lastname"
                                style="@style/EventDetailsScreenItemDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Zielinski" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_email" />

                            <TextView
                                android:id="@+id/tv_email"
                                style="@style/EventDetailsScreenItemDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="kmarcinzielinski@gmail.com" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_credibility" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/screen_margin_small"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_credibility"
                                    android:layout_width="@dimen/text_drawable_default_width"
                                    android:layout_height="@dimen/text_drawable_default_height" />

                                <TextView
                                    android:id="@+id/tv_credibility"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/screen_margin_half"
                                    android:textAllCaps="true"
                                    tools:text="very good" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>