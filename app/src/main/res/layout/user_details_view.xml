<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/user_details_bg"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/thumb_up"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_thumb_up"
                                android:tint="@color/user_details_thumb_default"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/screen_margin"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:src="@drawable/ic_avatar"
                            android:tint="@color/user_details_avatar"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/thumb_down"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_thumb_down"
                                android:tint="@color/user_details_thumb_default"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/screen_margin_half"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventDetailsScreenItemUpRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_name"/>

                                <TextView
                                    android:id="@+id/tv_name"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Marcin"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventDetailsScreenItemUpRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_last_name"/>

                                <TextView
                                    android:id="@+id/tv_lastname"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Zielinski"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventDetailsScreenItemUpRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_username"/>

                                <TextView
                                    android:id="@+id/tv_username"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="mzielu"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventDetailsScreenItemUpRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_email"/>

                                <TextView
                                    android:id="@+id/tv_email"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="kmarcinzielinski@gmail.com"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventDetailsScreenItemUpRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_register_date"/>

                                <TextView
                                    android:id="@+id/tv_register_date"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="2015-12-12"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/EventDetailsScreenItemUpRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_events_number"/>

                                <TextView
                                    android:id="@+id/tv_events_number"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="34"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_user_det_signature"/>

                            <TextView
                                android:id="@+id/tv_signature"
                                style="@style/EventDetailsScreenItemDownRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                tools:text="Random signature"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/screen_margin"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EventDetailsScreenItemUpRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_credibility"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/screen_margin_small"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_credibility"
                                    android:layout_width="@dimen/text_drawable_default_width"
                                    android:layout_height="@dimen/text_drawable_default_height"/>

                                <TextView
                                    android:id="@+id/tv_credibility"
                                    style="@style/EventDetailsScreenItemDownRow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/screen_margin_half"
                                    android:textAllCaps="true"
                                    tools:text="very good"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>