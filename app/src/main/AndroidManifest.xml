<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.activity_sync">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".screens.IntroScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screens.DummyScreen"/>
        <activity android:name=".screens.WelcomeScreen"/>
        <activity android:name=".screens.EventsScreen"/>
        <activity android:name=".screens.EventDetailsScreen"/>
        <activity android:name=".screens.UserDetailsScreen"/>
        <activity android:name=".screens.ParticipantsScreen"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBeiPRuuv-i15I6eJQDtW-irGPer2E1ZJs"/>

    </application>
</manifest>