<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.activity_sync">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".screens.SplashScreen"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.IntroScreen"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".screens.DummyScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LoginScreen"/>

        <activity
            android:name=".screens.RegisterScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LoginScreen"/>

        <activity
            android:name=".screens.EventsScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.EventDetailsScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.UserDetailsScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.ParticipantsScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.CreateNewEventScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.EventUpdateScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.CommentsScreen"
            android:theme="@style/AppTheme.CommentsScreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".screens.SettingsScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SettingsScreen"/>

        <activity
            android:name=".screens.ChangePasswordScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SettingsScreen"/>

        <activity
            android:name=".screens.EditAccountScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SettingsScreen"/>

        <activity
            android:name=".screens.FriendsScreen"
            android:screenOrientation="portrait" />

        <activity
            android:name=".screens.MyProfileScreen"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBeiPRuuv-i15I6eJQDtW-irGPer2E1ZJs"/>

    </application>
</manifest>